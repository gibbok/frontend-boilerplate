{
  "name": "end-to-end-testing-actyx-websites",
  "version": "1.0.0",
  "scripts": {
    "check": "npm run tsc && npm run lint",
    "clean": "shx rm -rf dist && shx rm -rf build && shx rm -rf coverage",
    "cy:verify": "cypress verify",
    "dep": "depcheck",
    "cy:ci": "npm run cy:verify && start-server-and-test build:start 8081 cy:run",
    "cy:open": "cypress open",
    "cy:run": "cypress run --headless --browser chrome",
    "lint:fix": "tsc & eslint './src/**/*.{js,ts,tsx}' --fix & prettier './src/**/*.{js,ts,tsx}' --write",
    "lint": "tsc & eslint './src/**/*.{js,ts,tsx}' & prettier './src/**/*.{js,ts,tsx}' --check",
    "sloc": "sloc ./ --exclude 'node_modules|dist|build|assets|coverage|/.(storyshot)'",
    "tsc:watch": "tsc --watch --pretty",
    "tsc": "tsc",
    "links:check:prod:developer": "ts-node ./src/check-links.ts prod developer",
    "links:check:prod:main": "ts-node ./src/check-links.ts prod main",
    "links:check:prod:download": "ts-node ./src/check-links.ts prod download",
    "links:check:prod": "npm run links:check:prod:developer && npm run links:check:prod:main && npm run links:check:prod:download",
    "links:check:dev:developer": "ts-node ./src/check-links.ts dev developer",
    "links:check:dev:main": "ts-node ./src/check-links.ts dev main",
    "links:check:dev:download": "ts-node ./src/check-links.ts dev download",
    "links:check:dev": "npm run links:check:dev:developer && npm run links:check:dev:main && npm run links:check:dev:download",
    "test": "npm run cy:run && npm run links:check:prod",
    "test:dev": "npm run cy:run && npm run links:check:dev"
  },
  "dependencies": {
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@bahmutov/add-typescript-to-cypress": "^2.1.2",
    "@cypress/webpack-preprocessor": "^5.4.10",
    "@types/node": "^14.14.6",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "broken-link-checker": "^0.7.8",
    "cypress": "^5.5.0",
    "depcheck": "^1.2.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "prettier": "^2.1.2",
    "shelljs": "^0.8.4",
    "shx": "^0.3.3",
    "sloc": "^0.2.1",
    "start-server-and-test": "^1.11.5",
    "ts-loader": "^8.0.7",
    "ts-node": "^9.0.0",
    "webpack": "^5.3.2",
    "webpack-dev-server": "^3.11.0"
  }
}
